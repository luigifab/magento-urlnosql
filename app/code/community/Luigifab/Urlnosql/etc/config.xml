<config>
	<modules>
		<Luigifab_Urlnosql>
			<version>2.6.2</version>
		</Luigifab_Urlnosql>
	</modules>
	<global>
		<blocks>
			<urlnosql>
				<class>Luigifab_Urlnosql_Block</class>
			</urlnosql>
			<adminhtml>
				<rewrite>
					<catalog_form_renderer_attribute_urlkey>Luigifab_Urlnosql_Block_Adminhtml_Rewrite_Urlkey</catalog_form_renderer_attribute_urlkey>
				</rewrite>
			</adminhtml>
		</blocks>
		<helpers>
			<urlnosql>
				<class>Luigifab_Urlnosql_Helper</class>
			</urlnosql>
		</helpers>
		<models>
			<urlnosql>
				<class>Luigifab_Urlnosql_Model</class>
			</urlnosql>
			<catalog>
				<rewrite>
					<url>Luigifab_Urlnosql_Model_Rewrite_Url</url>
					<indexer_url>Luigifab_Urlnosql_Model_Rewrite_Indexer</indexer_url>
					<product_url>Luigifab_Urlnosql_Model_Rewrite_Product</product_url>
					<product_attribute_backend_urlkey>Luigifab_Urlnosql_Model_Rewrite_AttrProdUrlkey</product_attribute_backend_urlkey>
				</rewrite>
			</catalog>
			<sitemap_mysql4>
				<rewrite>
					<catalog_product>Luigifab_Urlnosql_Model_Rewrite_Sitemap</catalog_product>
				</rewrite>
			</sitemap_mysql4>
		</models>
		<events>
			<controller_front_init_routers>
				<observers>
					<urlnosql_match_producturl>
						<class>Luigifab_Urlnosql_Controller_Router</class>
						<method>initControllerRouters</method>
					</urlnosql_match_producturl>
				</observers>
			</controller_front_init_routers>
		</events>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<urlnosql>
					<file>luigifab/urlnosql.xml</file>
				</urlnosql>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Urlnosql>
					<files>
						<default>Luigifab_Urlnosql.csv</default>
					</files>
				</Luigifab_Urlnosql>
			</modules>
		</translate>
	</adminhtml>
	<frontend>
		<events>
			<catalog_controller_product_init_before>
				<observers>
					<urlnosql_update_category>
						<class>urlnosql/observer</class>
						<method>updateCategoryId</method>
					</urlnosql_update_category>
				</observers>
			</catalog_controller_product_init_before>
		</events>
	</frontend>
</config>